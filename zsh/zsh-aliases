alias dotfiles='cd ~/.config'
alias ex='exit'
alias open='xdg-open'
alias vimrc='cd ~/.config/nvim  && "$EDITOR" init.vim'
alias dotfiles='cd ~/.config'
alias kittyconf='cd ~/.config/kitty/ && "$EDITOR" kitty.conf'
alias ll='ls -lah'
