set smartindent
set nohlsearch
set nu
set hidden
set noerrorbells
set smartcase
set noswapfile
set incsearch
set guicursor=a:blinkon80
set guicursor+=i:ver100-icursor
set scrolloff=8
set signcolumn=auto
set sidescroll=0
set completeopt=menuone,noselect
